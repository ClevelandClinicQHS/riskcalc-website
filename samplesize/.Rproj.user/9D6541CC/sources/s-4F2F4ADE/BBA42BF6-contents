function(input, output, session) {
    useShinyjs(html = TRUE)
    
    output$summary = renderText({
        design()
    })
    
    design = reactive({
        a = input$last_btn
        if (is.null(a)) {
            NULL
        } else {
            input[[a]]
        }
    })
    
    #shinyjs::onclick("Introduction", shinyjs::hide(id = "hint"))
    shinyjs::onclick("headingRCT", showIntroAndHint())
    shinyjs::onclick("headingOS", showIntroAndHint())
    shinyjs::onclick("headingCaseControl", showIntroAndHint())
    shinyjs::onclick("headingCohort", showIntroAndHint())
    shinyjs::onclick("headingCrossSection", showIntroAndHint())
    
    observeEvent(input$Introduction, {
        shinyjs::show("introduction")
        shinyjs::hide(id = "hint")
        shinyjs::hide(id="outcome")
    })

    observeEvent(input$RCT,
                 {
                     runjs(CaseControlDeactive)
                     runjs(CohortDeactive)
                     shinyjs::hide(id="introduction")
                     shinyjs::show(id="outcome")
                 })

    observeEvent(input$CaseControl,
                 {
                     runjs(RCTDeactive)
                     runjs(CohortDeactive)
                     shinyjs::hide(id="introduction")
                     shinyjs::show(id="outcome")
                 })

    observeEvent(input$Cohort,
                 {
                     runjs(RCTDeactive)
                     runjs(CaseControlDeactive)
                     shinyjs::hide(id="introduction")
                     shinyjs::show(id="outcome")
                 })


}